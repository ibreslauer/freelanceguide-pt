---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import FeaturedPostCard from "../../components/FeaturedPostCard.astro";
import PostCard from "../../components/PostCard.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import { getBaseUrl } from "../../utils";

const base = getBaseUrl();
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const [featuredPost, ...otherPosts] = posts;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 1200px;
        max-width: calc(100% - 2em);
        padding: 2em 0;
      }

      /* First row: Featured post and Newsletter side-by-side */
      .top-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.25rem;
        margin-bottom: 1.25rem;
      }

      /* Blog posts grid */
      .posts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-auto-rows: 450px;
        gap: 1.25rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      /* Newsletter signup */
      .bento-item.newsletter {
        background: linear-gradient(
          135deg,
          var(--accent) 0%,
          var(--accent-dark) 100%
        );
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 3rem;
        position: relative;
        overflow: hidden;
        border-radius: 8px;
        min-height: 400px;
      }

      .bento-item a {
        display: block;
        text-decoration: none;
        height: 100%;
        color: inherit;
      }

      .newsletter h2 {
        margin: 0 0 1rem 0;
        color: white;
        font-size: 2rem;
        font-weight: 700;
      }

      .newsletter p {
        margin: 0 0 2rem 0;
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.1rem;
      }

      .newsletter-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .newsletter-form input {
        padding: 0.875rem 1rem;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 6px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1rem;
        transition: all 0.2s ease;
      }

      .newsletter-form input::placeholder {
        color: rgba(255, 255, 255, 0.6);
      }

      .newsletter-form input:focus {
        outline: none;
        border-color: white;
        background: rgba(255, 255, 255, 0.15);
      }

      .newsletter-form button {
        padding: 0.875rem 2rem;
        background: white;
        color: var(--accent-dark);
        border: none;
        border-radius: 6px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .newsletter-form button:hover {
        background: rgba(255, 255, 255, 0.95);
      }

      /* Responsive adjustments */
      @media (max-width: 1024px) {
        .posts-grid {
          grid-template-columns: repeat(2, 1fr);
        }

        .newsletter {
          padding: 2.5rem;
        }

        .newsletter h2 {
          font-size: 1.75rem;
        }

        .bento-item.newsletter {
          padding: 2.5rem;
        }
      }

      @media (max-width: 768px) {
        main {
          width: 100%;
        }

        .top-row {
          grid-template-columns: 1fr;
          gap: 1rem;
        }

        .posts-grid {
          grid-template-columns: 1fr;
          grid-auto-rows: 300px;
          gap: 1rem;
        }

        .newsletter {
          padding: 2rem;
        }

        .newsletter h2 {
          font-size: 1.5rem;
        }

        .bento-item.newsletter {
          min-height: 300px;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <!-- Top Row: Featured Post and Newsletter -->
        <div class="top-row">
          <!-- Featured Post -->
          {featuredPost && <FeaturedPostCard post={featuredPost} />}

          <!-- Newsletter Signup -->
          <div class="bento-item newsletter">
            <h2>Stay Updated</h2>
            <p>
              Get the latest guides on freelancing in Portugal delivered to your
              inbox.
            </p>
            <form
              class="newsletter-form"
              method="post"
              action="#"
              onsubmit="event.preventDefault(); alert('Newsletter signup coming soon!');"
            >
              <input type="email" placeholder="Your email address" required />
              <button type="submit">Subscribe</button>
            </form>
          </div>
        </div>

        <!-- Blog Posts Grid -->
        <ul class="posts-grid">
          {otherPosts.map((post) => <PostCard post={post} />)}
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
