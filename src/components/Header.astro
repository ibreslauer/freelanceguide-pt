---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import Logo from "./Logo.astro";
import Dropdown from "./Dropdown.astro";

const base = import.meta.env.BASE_URL;
---

<header>
  <nav>
    <div class="logo">
      <a href={base}>
        <Logo class="logo-icon" size={24} />
        <span class="logo-text">{SITE_TITLE}</span>
      </a>
    </div>
    <div class="internal-links">
      <HeaderLink href={`${base}blog`}>Guides</HeaderLink>
      <Dropdown
        label="Calculators"
        items={[
          { label: "NHR", href: "calculators/nhr" },
          { label: "SeguranÃ§a Social", href: "calculators/seguranca-social" },
        ]}
      />
      <HeaderLink href={`${base}about`}>About</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0;
    background: white;
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(8px);
    background-color: rgba(255, 255, 255, 0.95);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
  }

  .logo a {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    text-decoration: none;
    color: rgb(15, 23, 42);
    font-family: "Readex Pro", sans-serif;
    font-weight: 500;
    font-size: 1.125rem;
    transition: color 0.2s;
  }

  .logo a:hover {
    color: rgb(13, 148, 136);
  }

  .logo-text {
    font-size: 1.125rem;
  }

  .internal-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  @media (max-width: 640px) {
    .logo-text {
      display: none;
    }
    nav {
      padding: 0.875rem 1rem;
    }
    .internal-links {
      gap: 1rem;
    }
  }
</style>
