---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import CalculatorsDropdown from "./CalculatorsDropdown.tsx";
import { getBaseUrl } from "../utils";
import { Calculator, Calendar, ClipboardList } from "lucide-react";

const base = getBaseUrl();
---

<header>
  <nav>
    <div class="logo">
      <a href={base}>
        <div class="flex flex-row gap-2 items-center">
          <ClipboardList size={24} client:only="react" />
          <div class="logo-text-container">
            <div class="logo-text">{SITE_TITLE}</div>
            <div class="logo-portugal">PORTUGAL</div>
          </div>
        </div>
      </a>
    </div>
    <div class="internal-links">
      <HeaderLink href={`${base}blog`}>Guides</HeaderLink>
      <div class="calculators-wrapper">
        <button
          class="mobile-icon-button"
          id="calc-icon-button"
          aria-label="Calculators"
        >
          <Calculator size={20} client:only="react" />
        </button>
        <div class="desktop-dropdown">
          <CalculatorsDropdown base={base} client:only="react" />
        </div>
        <div class="mobile-dropdown-menu" id="calc-mobile-menu">
          <a href={`${base}calculators/nhr`} class="mobile-dropdown-item">NHR</a
          >
          <a
            href={`${base}calculators/seguranca-social`}
            class="mobile-dropdown-item">Seguran√ßa Social</a
          >
        </div>
      </div>
      <div class="tax-calendar-wrapper">
        <button
          class="mobile-icon-button"
          id="calendar-icon-button"
          aria-label="Tax Calendar"
        >
          <Calendar size={20} client:only="react" />
        </button>
        <HeaderLink href={`${base}tax-calendar`}>Tax Calendar</HeaderLink>
      </div>
      <HeaderLink href={`${base}about`} class="about-link">About</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0;
    background: white;
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(8px);
    background-color: rgba(255, 255, 255, 0.95);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
  }

  .logo a {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    text-decoration: none;
    color: rgb(15, 23, 42);
    font-family: "Readex Pro", sans-serif;
    font-weight: 500;
    font-size: 1.125rem;
    transition: color 0.2s;
  }

  .logo a:hover {
    color: var(--accent);
  }

  .logo-text-container {
    display: flex;
    flex-direction: column;
    gap: -0.25rem;
    margin-top: -0.25rem;
    margin-bottom: -0.25rem;
  }

  .logo-text {
    font-size: 1.125rem;
  }

  .logo-portugal {
    font-size: 0.75rem;
    color: var(--accent);
    margin-top: -0.25rem;
  }

  .internal-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .calculators-wrapper,
  .tax-calendar-wrapper {
    position: relative;
  }

  .mobile-icon-button,
  .mobile-icon-link {
    display: none;
  }

  .mobile-dropdown-menu {
    display: none;
  }

  @media (max-width: 640px) {
    .logo-portugal {
      display: none;
    }
    .logo-text-container {
      display: flex;
      align-items: center;
      margin-top: 0;
      margin-bottom: 0;
    }
    .logo-text {
      font-size: 1rem;
    }
    nav {
      padding: 0.875rem 1rem;
    }
    .internal-links {
      gap: 1rem;
    }

    /* Hide text labels on mobile */
    .calculators-wrapper .desktop-dropdown,
    .tax-calendar-wrapper :global(a[href*="tax-calendar"]) {
      display: none;
    }

    /* Show icons on mobile */
    .mobile-icon-button,
    .mobile-icon-link {
      display: flex;
      align-items: center;
      justify-content: center;
      color: rgb(15, 23, 42);
      cursor: pointer;
      transition: color 0.2s;
      background: none;
      border: none;
      padding: 0;
    }

    .mobile-icon-button:hover,
    .mobile-icon-link:hover {
      color: var(--accent);
    }

    /* Mobile dropdown menu for calculators */
    .mobile-dropdown-menu {
      display: none;
      position: absolute;
      top: 100%;
      right: 0;
      margin-top: 0.5rem;
      background: white;
      border: 1px solid rgb(226, 232, 240);
      border-radius: 0.375rem;
      box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      min-width: 10rem;
      z-index: 100;
    }

    .mobile-dropdown-menu.open {
      display: block;
    }

    .mobile-dropdown-item {
      display: block;
      padding: 0.625rem 1rem;
      color: rgb(15, 23, 42);
      text-decoration: none;
      font-size: 0.875rem;
      font-family: "Readex Pro", sans-serif;
      transition: background-color 0.2s;
    }

    .mobile-dropdown-item:hover {
      background-color: rgb(241, 245, 249);
    }

    .mobile-dropdown-item:first-child {
      border-radius: 0.375rem 0.375rem 0 0;
    }

    .mobile-dropdown-item:last-child {
      border-radius: 0 0 0.375rem 0.375rem;
    }

    /* Hide About link on mobile */
    .about-link {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const calcButton = document.getElementById("calc-icon-button");
    const calcMenu = document.getElementById("calc-mobile-menu");

    if (calcButton && calcMenu) {
      calcButton.addEventListener("click", (e) => {
        e.stopPropagation();
        calcMenu.classList.toggle("open");
      });

      document.addEventListener("click", (e) => {
        if (!calcMenu.contains(e.target as Node) && e.target !== calcButton) {
          calcMenu.classList.remove("open");
        }
      });
    }

    // Handle calendar button click
    const calendarButton = document.getElementById("calendar-icon-button");
    if (calendarButton) {
      calendarButton.addEventListener("click", () => {
        const calendarLink = document.querySelector(
          '.tax-calendar-wrapper a[href*="tax-calendar"]',
        ) as HTMLAnchorElement;
        if (calendarLink) {
          window.location.href = calendarLink.href;
        }
      });
    }
  });
</script>
